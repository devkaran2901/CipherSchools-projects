    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Person Cards</title>
    <style>
        body {
            font-family: sans-serif;
            background-color: #f4f4f9;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #card-container {
            display: flex;
            flex-direction: column; /* Stack cards vertically on small screens */
            align-items: center;
            width: 100%;
        }

        .person-card {
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 20px;
            margin: 10px;
            width: 90%; /* Start with a mobile-first width */
            max-width: 320px; /* Set a max-width for consistency */
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .person-card:hover {
            transform: translateY(-5px);
        }

        .person-card img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
            border: 3px solid #eee;
        }

        .person-card h2 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #333;
        }

        .person-card p {
            color: #666;
            margin: 0;
        }
        
        #add-person-form {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            width: 90%;
            max-width: 500px;
        }

        #add-person-form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box; /* Important for padding and width */
        }
        
        #add-person-form button {
            width: 100%;
            padding: 10px;
            background-color: #000080;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }


        /* --- Media Queries for Responsiveness --- */
        
        /* For tablets and larger screens */
        @media (min-width: 768px) {
            #card-container {
                flex-direction: row; /* Arrange cards side-by-side */
                flex-wrap: wrap; /* Allow cards to wrap to the next line */
                justify-content: center;
