<body>

    <h1>Person List</h1>

    <!-- Form with ARIA labels for accessibility -->
    <form id="add-person-form" aria-label="Add a new person to the list">
        <h2>Add New Person</h2>
        <label for="name-input" class="sr-only">Name</label>
        <input type="text" id="name-input" placeholder="Name" aria-label="Name" required>
        
        <label for="age-input" class="sr-only">Age</label>
        <input type="number" id="age-input" placeholder="Age" aria-label="Age" required>
        
        <button type="submit">Add Person</button>
    </form>

    <div id="card-container"></div>

    <script>
        class Person {
            constructor(name, age, imageUrl) {
                this.name = name;
                this.age = age;
                this.imageUrl = imageUrl;
            }

            createCard() {
                const card = document.createElement('div');
                card.className = 'person-card';

                // Image with alt attribute for accessibility
                const imgElement = document.createElement('img');
                imgElement.src = this.imageUrl;
                imgElement.alt = `Profile picture of ${this.name}`;
                imgElement.onerror = "this.onerror=null;this.src='https://placehold.co/100x100/cccccc/ffffff?text=User';"


                const nameElement = document.createElement('h2');
                nameElement.textContent = this.name;

                const ageElement = document.createElement('p');
                ageElement.textContent = `Age: ${this.age}`;

                card.appendChild(imgElement);
                card.appendChild(nameElement);
                card.appendChild(ageElement);

                return card;
            }
        }

        const container = document.getElementById('card-container');
        
        // Initial people
        const initialPeople = [
            new Person('Alice', 30, 'https://placehold.co/100x100/E8117F/ffffff?text=A'),
            new Person('Bob', 25, 'https://placehold.co/100x100/3498db/ffffff?text=B')
        ];

        initialPeople.forEach(person => {
            container.appendChild(person.createCard());
        });

        // Form submission handler
        const form = document.getElementById('add-person-form');
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            const nameInput = document.getElementById('name-input');
            const ageInput = document.getElementById('age-input');
            
            const name = nameInput.value;
            const age = ageInput.value;
            const initial = name.charAt(0).toUpperCase();
            const imageUrl = `https://placehold.co/100x100/663399/ffffff?text=${initial}`;

            if(name && age) {
                const newPerson = new Person(name, age, imageUrl);
                container.appendChild(newPerson.createCard());

                // Clear the form fields
                nameInput.value = '';
                ageInput.value = '';
            }
        });
    </script>

</body>
</html>
